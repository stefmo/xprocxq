<p:pipeline xmlns:p="http://www.w3.org/ns/xproc">

  <p:choose>
    <p:when test="count(.)=1">
        <p:identity>
            <p:input port="source">
                <p:inline>
                    <test1/>
                </p:inline>
            </p:input>
        </p:identity>
    </p:when>

    <p:otherwise>
        <p:identity>
            <p:input port="source">
                <p:inline>
                    <test2/>
                </p:inline>
            </p:input>
        </p:identity>
    </p:otherwise>
  </p:choose>

</p:pipeline>
