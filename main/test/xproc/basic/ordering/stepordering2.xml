 <p:declare-step name="pipeline"
            xmlns:p="http://www.w3.org/ns/xproc">

    <p:input port="source" primary="true"/>
    <p:output port="result" primary="true"/>


    <p:count name="step3">
        <p:input port="source">
            <p:pipe port="result" step="step1"/>
        </p:input>
    </p:count>

    <p:count name="step2">
        <p:input port="source">
            <p:pipe port="result" step="step1"/>
        </p:input>
    </p:count>
    
    <p:identity name="step1">
        <p:input port="source">
            <p:pipe port="result" step="step3"/>
        </p:input>
    </p:identity>

 </p:declare-step>
