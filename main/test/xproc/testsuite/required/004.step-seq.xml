<t:test-suite xmlns:t="http://xproc.org/ns/testsuite"
        xmlns:p="http://www.w3.org/ns/xproc"
        xmlns:c="http://www.w3.org/ns/xproc-step"
        xmlns:err="http://www.w3.org/ns/xproc-error">

<t:test>
<t:title>004a</t:title>
<t:description>simple sequence</t:description>

<t:input port='src'>
<document>
<title>Lorem Ipsum</title>
<para>At vero eos et accusamus et iusto odio dignissimos</para>
</document>
</t:input>

<t:pipeline>
 <p:pipeline>
  <p:input name="std-input" port="std-input"/>
  <p:output name="std-output" port="std-output"/>
 
    <p:identity name="step2">
       <p:input port="step2-input">
              <p:pipe step="step1" port="step1-output"/>
        </p:input>
       <p:output port="step2-output"/>
    </p:identity>

    <p:count name="step1">
        <p:input port="step1-input">
              <p:pipe step="step1" port="std-input"/>
        </p:input>
        <p:output port="step1-output"/>
    </p:count>

 </p:pipeline>
</t:pipeline>

<t:output port='std-output'>
</t:output>

</t:test>

</t:test-suite>
