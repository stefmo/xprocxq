<p:library xmlns:p ="http://www.w3.org/ns/xproc" 
                    xmlns:ext ="http://xproc.net/xproc/ext"
                    xmlns:xproc = "http://xproc.net/xproc"
                    name="xprocxq-extension-library">

    <p:declare-step type="ext:test">
        <p:input port="source" primary="true"/>
        <p:output port="result" primary="true"/>
    </p:declare-step>                        
                        
<!-- top level inputs //-->
    <p:declare-step type="ext:pre">
        <p:input port="source" primary="true"/>
        <p:output port="stdout" primary="true"/>
    </p:declare-step>

    <p:declare-step type="ext:post">
        <p:input port="source" primary="true"/>
        <p:output port="stdout" primary="true"/>
    </p:declare-step>
    
    <p:declare-step type="ext:step">
        <p:input port="input" primary="true"/>
    </p:declare-step>

    <p:declare-step type="util:test-step">
        <p:input port="input" primary="true"/>
    </p:declare-step>

<!-- Test Runner //-->
    <p:declare-step type="test:run">
        <p:input port="input" primary="true"/>
    </p:declare-step>

    <p:declare-step type="ext:docbook">
        <p:input port="input" primary="true"/>
    </p:declare-step>

</p:library>