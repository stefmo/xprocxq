<p:library xmlns:p ="http://www.w3.org/ns/xproc" 
                    xmlns:ext ="http://xproc.net/xproc/ext"
                    xmlns:xproc = "http://xproc.net/xproc"
                    name="xprocxq-extension-library">

    <p:declare-step type="ext:test" name="step" xproc:arity="1">
        <p:input port="source" primary="true"/>
        <p:output port="result" primary="true"/>
    </p:declare-step>                        
                        
    <p:declare-step type="ext:pre" name="step" xproc:arity="1">
        <p:input port="source" primary="true"/>
        <p:output port="result" primary="true"/>
    </p:declare-step>

    <p:declare-step type="ext:post" name="step" xproc:arity="1">
        <p:input port="source" primary="true"/>
        <p:output port="result" primary="true"/>
    </p:declare-step>
    
    <p:declare-step type="util:step" name="step" xproc:arity="1">
        <p:input port="input" primary="true"/>
    </p:declare-step>

    <p:declare-step type="util:test-step" name="test-step" xproc:arity="1">
        <p:input port="input" primary="true"/>
    </p:declare-step>

<!-- Test Runner //-->
    <p:declare-step type="test:run" name="test-step" xproc:arity="1">
        <p:input port="input" primary="true"/>
    </p:declare-step>

    <p:declare-step type="ext:docbook" name="test-step" xproc:arity="1">
        <p:input port="input" primary="true"/>
    </p:declare-step>

</p:library>