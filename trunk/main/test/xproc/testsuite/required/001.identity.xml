<t:test-suite  xmlns:t="http://xproc.org/ns/testsuite"
        xmlns:p="http://www.w3.org/ns/xproc"
        xmlns:c="http://www.w3.org/ns/xproc-step"
        xmlns:err="http://www.w3.org/ns/xproc-error">

<t:test id="001a">
<t:title>001a</t:title>
<t:description>identity with explicit input and output</t:description>

<t:input port='source'>
<document>
<title>Lorem Ipsum</title>
<para>At vero eos et accusamus et iusto odio dignissimos</para>
</document>
</t:input>

<t:pipeline>
<p:pipeline name="pipeline">    
    <p:identity/>
  </p:pipeline>
</t:pipeline>

<t:output port='result'>
<document>
<title>Lorem Ipsum</title>
<para>At vero eos et accusamus et iusto odio dignissimos</para>
</document>
</t:output>

</t:test>


<t:test>
    
<t:test>
<t:title>001b</t:title>
<t:description>simplified identity with multiple steps</t:description>

<t:input port='src'>
<document>
<title>Lorem Ipsum</title>
<para>At vero eos et accusamus et iusto odio dignissimos</para>
</document>
</t:input>

<t:pipeline>
<p:pipeline name="pipeline">
    <p:input port="src"/>
    <p:output port="result"/>
    
    <p:identity/>

    <p:count/>

  </p:pipeline>
</t:pipeline>

<t:output port='result'>
  <c:result>1</c:result>
</t:output>

</t:test>

<t:test>
<t:title>001c</t:title>
<t:description>simplified identity with multiple steps</t:description>

<t:input port='src'>
<document>
<title>Lorem Ipsum</title>
<para>At vero eos et accusamus et iusto odio dignissimos</para>
</document>
</t:input>

<t:pipeline>
<p:pipeline name="pipeline">
    <p:identity/>
    <p:count/>
  </p:pipeline>
</t:pipeline>

<t:output port='result'>
  <c:result>1</c:result>
</t:output>

</t:test>

<t:title>001d</t:title>
<t:description>identity with multiple p:pipe and multiple steps, is this an error?</t:description>

<t:input port='src'>
<document>
<title>Lorem Ipsum</title>
<para>At vero eos et accusamus et iusto odio dignissimos</para>
</document>
</t:input>

<t:pipeline>
<p:pipeline name="pipeline">
    <p:input port="src"/>
    <p:output port="result"/>
    
    <p:identity>
      <p:input port="source">
	<p:pipe step="pipeline" port="src"/>
	<p:pipe step="pipeline" port="src"/>
	<p:pipe step="pipeline" port="src"/>
      </p:input>
    </p:identity>

    <p:count/>

  </p:pipeline>
</t:pipeline>

<t:output port='result'>
  <c:result>3</c:result>
</t:output>

</t:test>

</t:test-suite>